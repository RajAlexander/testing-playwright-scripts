{
  "name": "testing-playwright-scripts",
  "version": "1.2.0",
  "description": "Playwright test suites for the Wild Fork platform",
  "main": "index.js",
  "scripts": {
    "api": "DEBUG=pw:api cross-env ENV=test cucumber-js",
    "build": "rimraf build && npm run format && npm run lint && tsc && npm run cucumber-check",
    "cucumber-check": "cross-env ENV=test cucumber-js features/**/*.feature --dry-run --require env/set-environment-variables.ts --require world/custom-world.ts --require step-definitions/**/*.ts --require hooks/**/*.ts  --require-module ts-node/register --format-options \"{\\\"snippetInterface\\\": \\\"async-await\\\"}\" --format summary --format progress --format progress-bar  --publish-quiet",
    "debugw": "set PWDEBUG=1 & set DEBUG=pw:api & cross-env ENV=prod cucumber-js features/functional/smoke/smoke-test.feature",
    "debug": "PWDEBUG=1 DEBUG=pw:api cross-env ENV=test cucumber-js",
    "video": "PWVIDEO=1 cross-env ENV=test cucumber-js",
    "eslint-fix": "eslint ./ --ext .js,.ts,.tsx --fix",
    "eslint-init": "eslint --init",
    "format": "prettier --write \"**/*.{ts,tsx,css,html}\" ",
    "lint": "eslint ./ --ext .js,.ts,.tsx --format visualstudio --no-color --report-unused-disable-directives",
    "only": "npm run cucumber -- --tags @only",
    "report": "open reports/report.html",
    "snippets": "cross-env ENV=test cucumber-js features/**/*.feature --dry-run --format snippets",
    "steps-usage": "cross-env ENV=test cucumber-js features/**/*.feature --dry-run",
    "all": "cross-env ENV=test cucumber-js features/**/*.feature",
    "test": "cross-env ENV=test cucumber-js",
    "test:parallel": "cross-env ENV=test cucumber-js --parallel=2",
    "docker": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:latest /bin/bash",
    "allure": "allure serve reports/allure-results"
  },
  "engines": {
    "node": ">=14"
  },
  "author": "Wild Fork",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tallyb/cucumber-playwright/issues"
  },
  "dependencies": {
    "@cucumber/cucumber": "9.1.2",
    "@cucumber/html-formatter": "20.3.0",
    "@cucumber/messages": "^22.0.0",
    "@cucumber/pretty-formatter": "1.0.0",
    "@playwright/test": "1.34.0",
    "@types/fs-extra": "11.0.1",
    "cucumber-console-formatter": "1.0.0",
    "cucumber-html-reporter": "7.1.0",
    "pixelmatch": "5.3.0",
    "pngjs": "7.0.0"
  },
  "devDependencies": {
    "@types/expect": "24.3.0",
    "@types/faker": "5.5.1",
    "@types/fs-extra": "11.0.1",
    "@types/lodash": "4.14.194",
    "@types/node": "18.16.13",
    "@types/pixelmatch": "5.2.4",
    "@types/pngjs": "6.0.1",
    "@typescript-eslint/eslint-plugin": "5.59.6",
    "@typescript-eslint/parser": "5.59.6",
    "allure-cucumberjs": "2.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.4",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "faker": "5.5.3",
    "fs-extra": "11.1.1",
    "open": "9.1.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "standard-version": "9.5.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  }
}
